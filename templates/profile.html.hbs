    <style>
        
        .profile-header {
            display: flex;
            flex-direction: column;
            gap: calc(2 * var(--base-unit));;
            margin-bottom: calc(3 * var(--base-unit));;
            background-color: var(--light-green);
            border-radius: 8px;
            padding: 24px;
        }
        
        .profile-top {
            display: flex;
            gap: 24px;
            align-items: center;
        }
        
        .profile-name-section {
            flex-grow: 1;
        }
        
        .profile-name {
            font-size: 32px;
            margin-bottom: 8px;
        }
        
        .trust-indicator {
            display: inline-block;
            background-color: var(--medium-green);
            color: var(--lighter-green);
            padding: 4px 8px;
            border-radius: 16px;
            font-size: 14px;
            margin-right: 8px;
        }
        
        .profile-actions {
            display: flex;
            gap: calc(1 * var(--base-unit));
        }

        .bio{
            margin-left: calc(3 * var(--base-unit));
            margin-top: calc(2 * var(--base-unit));
            color: var(--warm-brown);
            font-family: 'Quando', serif;
            font-size: 18px; 
            }
        .card-title {
            font-family: 'Quando', serif;
            font-size: 18px;
            margin-bottom: calc(1 * var(--base-unit));
        }
        
        .card-status {
            display: flex;
            align-items: center;
            gap: calc(2 * var(--base-unit));
            margin-bottom: calc(1 * var(--base-unit));
        }
        
        .status-indicator {
            width: calc(2 * var(--base-unit));
            height: calc(2 * var(--base-unit));
            border-radius: 50%;
        }
        
        .status-available {
            background-color: var(--success-green);
        }
        
        .status-borrowed {
            background-color: var(--alert-red);
        }
        
        .status-pending {
            background-color: var(--warning-amber);
        }
        
        .card-footer {
            margin-top: auto;
            padding-top: calc(2 * var(--base-unit));
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: calc(2 * var(--base-unit));
            margin-bottom: calc(2* var(--base-unit));
        }
        
        .stat-number {
            font-size: 32px;
            font-weight: 500;
            color: var(--warm-brown);
        }
        
        .stat-label {
            font-size: 14px;
        }
        
        .history-item {
            display: flex;
            gap: calc(2 * var(--base-unit));
            padding: calc(2 * var(--base-unit));
            border-bottom: 1px solid var(--light-green);
        }
        
        .history-icon {
            width: 40px;
            height: 40px;
            background-color: var(--light-green);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .history-details {
            flex-grow: 1;
        }
        
        .history-date {
            font-size: 14px;
            color: var(--warm-brown);
        }
        
        .skill-tag {
            display: inline-block;
            background-color: var(--medium-green);
            color: var(--cream);
            padding: 4px 12px;
            border-radius: 16px;
            margin-right: calc(2 * var(--base-unit));
            margin-bottom: calc(2 * var(--base-unit));
        }
    </style>
</head>
